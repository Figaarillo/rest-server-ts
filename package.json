{
  "name": "api-server-ts",
  "version": "1.0.0",
  "description": "Proyecto de servidor utilizando NodeJS con `TypeScript` y `TypeORM` como ORM para SQL",
  "author": "Figarillo",
  "main": "index.js",
  "scripts": {
    "start": "tsc && node dist/server.js",
    "start:dev": "tsc && concurrently \"tsc -w\" \"nodemon dist/server.js\"",
    "start:test": "NODE_ENV=test pnpm run start:dev",
    "lint": "eslint --ext .ts src",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "lint:fix": "eslint --ext .ts src --fix",
    "prepare": "husky install",
    "ts-check": "tsc -p tsconfig.json --noEmit",
    "pre-commit": "lint-staged",
    "pre-check": "pnpm run ts-check && pnpm run prettier && pnpm run lint",
    "test": "",
    "typeorm": "typeorm-ts-node-esm -d src/config/data-source.ts",
    "migration:generate": "npm run typeorm migration:generate",
    "migration:run": "npm run typeorm migration:run"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "0.1.13",
    "typeorm": "^0.3.16",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "concurrently": "^8.1.0",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard-with-typescript": "35.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "2.8.8",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  }
}
